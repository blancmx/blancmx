#include<stdio.h>
void Parr(int arr[], int len);

int main()
{
	int arr[5] = { 0 };
	int len = sizeof(arr) / sizeof(int);
	for (int i=0;i<len;)
	{
		printf("请输入第%d个数\n",i+1);
		scanf("%d",&arr[i]);
		i++;
	}
	Parr(arr,len);
	printf("-------------------------------------\n");
	//反转数组
		int i = 0;
		int j = len-1;
		while (i<j)
		{
			
			int temp = arr[i];
			arr[i] = arr[j];
			arr[j] = temp;
			i++;
			j--;
		}
		Parr(arr, len);
	
	return 0;
}
//遍历函数
void Parr(int arr[], int len)
{
	for (int i=0;i<len;i++)
	{
		printf("%d\n",arr[i]);
	}
}
